%global packname  MRCE
%global packver   2.1
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          2.1
Release:          1%{?dist}
Summary:          Multivariate Regression with Covariance Estimation

License:          GPL-2
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 2.10.1
Requires:         R-core >= 2.10.1
BuildRequires:    R-CRAN-QUIC 
Requires:         R-CRAN-QUIC 

%description
Compute and select tuning parameters for the MRCE estimator proposed by
Rothman, Levina, and Zhu (2010) <doi:10.1198/jcgs.2010.09188>.  This
estimator fits the multiple output linear regression model with a sparse
estimator of the error precision matrix and a sparse estimator of the
regression coefficient matrix.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

