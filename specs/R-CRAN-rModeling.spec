%global packname  rModeling
%global packver   0.0.3
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          0.0.3
Release:          2%{?dist}
Summary:          A Framework of Cross-Validation

License:          GPL-2
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 2.10
Requires:         R-core >= 2.10
BuildArch:        noarch
BuildRequires:    R-MASS 
BuildRequires:    R-CRAN-caret 
BuildRequires:    R-CRAN-e1071 
Requires:         R-MASS 
Requires:         R-CRAN-caret 
Requires:         R-CRAN-e1071 

%description
A framework of cross-validation for spectral data analysis that allows for
automatic tuning of model parameters and for model evaluation. It is
particularly useful for applications where intra-group heterogeneity is
significant due to inter individual differences. S. Guo, T. Bocklitz, U.
Neugebauer, J.Popp (2017) <doi:10.1039/C7AY01363A>.

%prep
%setup -q -c -n %{packname}

find -type f -executable -exec grep -Iq . {} \; -exec sed -i -e '$a\' {} \;

%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}

test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

%files
%dir %{rlibdir}/%{packname}
%doc %{rlibdir}/%{packname}/html
%{rlibdir}/%{packname}/Meta
%{rlibdir}/%{packname}/help
%{rlibdir}/%{packname}/data
