%global packname  dynsim
%global packver   1.2.1
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          1.2.1
Release:          1%{?dist}
Summary:          Dynamic Simulations of Autoregressive Relationships

License:          GPL-3
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 3.0.0
Requires:         R-core >= 3.0.0
BuildArch:        noarch
BuildRequires:    R-CRAN-gridExtra >= 2.0.0
BuildRequires:    R-CRAN-ggplot2 >= 1.0.1.9003
BuildRequires:    R-grid 
BuildRequires:    R-MASS 
Requires:         R-CRAN-gridExtra >= 2.0.0
Requires:         R-CRAN-ggplot2 >= 1.0.1.9003
Requires:         R-grid 
Requires:         R-MASS 

%description
Dynamic simulations and graphical depictions of autoregressive
relationships.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

%files
%dir %{rlibdir}/%{packname}
%doc %{rlibdir}/%{packname}/html
%{rlibdir}/%{packname}/Meta
%{rlibdir}/%{packname}/help
%{rlibdir}/%{packname}/data
%doc %{rlibdir}/%{packname}/demo
